{
    "compilerOptions": {
      "target": "ES2020", // Adjust as needed
      "module": "CommonJS",
      "outDir": "./dist", // Output directory for transpiled code
      "rootDir": "./src", // Source code directory
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": ".", // Base URL for module resolution
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  